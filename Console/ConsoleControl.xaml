<ad:DockableContent 
    
    x:Class="Sokoban.View.ConsoleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    mc:Ignorable="d"     
    d:DesignHeight="300" d:DesignWidth="300"        
    >

    <DockPanel LastChildFill="True">
    <TextBox DockPanel.Dock="Bottom" x:Name="tbConsoleIn" PreviewKeyDown="tbConsoleIn_PreviewKeyDown" />
	<TextBox DockPanel.Dock="Top" x:Name="tbConsoleOut" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" />    
    </DockPanel>
</ad:DockableContent>
